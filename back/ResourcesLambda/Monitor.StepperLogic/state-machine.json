{
  "Comment": "State Machine for site monitoring",
  "StartAt": "RetrieveRecords",
  "States": {
    "RetrieveRecords": {
      "Type": "Task",
      "Resource": "${RetrieveRecordsTask.Arn}",
      "Next": "MonitorRecords"
    },
    "MonitorRecords": {
      "Type": "Task",
      "Resource": "${MonitorRecordsTask.Arn}",
      "Next": "ProcessRecords"
    },
    "ProcessRecords": {
      "Type": "Task",
      "Resource": "${ProcessRecordsTask.Arn}",
      "End": true
    }
  }
}